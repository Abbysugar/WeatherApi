{
    "name": "bukola/weather-api",

    "description": "A package that outputs the weather of any input location using the pen Weather Map Api",


    "require": {
    	"guzzlehttp/guzzle": "~6.0",
        "vlucas/phpdotenv": "^2.4"
    },


    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "php": ">=5.3.2"    
    },


    "autoload": {
        "psr-4": {
            "Bukola\\WeatherApi\\": "src/"
    	},
        "classmap": ["src/"]
    },

    
    "autoload-dev": {
        "psr-4": {
            "Bukola\\WeatherApi\\Test\\": "tests/"
    	},
        "classmap": ["tests/"]
    },

    "scripts": {
       "test": "phpunit"
   }
}
